INSERT INTO joanna_shop VALUES(6, "pants", "M", 4, 10);
INSERT INTO joanna_shop VALUES(7, "pants", "L", 1, 10);
INSERT INTO joanna_shop VALUES(8, "pants", "XL", 2, 10);
INSERT INTO joanna_shop VALUES(9, "jacket", "S", 3, 15);
INSERT INTO joanna_shop VALUES(10, "jacket", "M", 4, 15);
INSERT INTO joanna_shop VALUES(11, "jacket", "L", 1, 15);
INSERT INTO joanna_shop VALUES(12, "shoes", "S", 2, 20);
INSERT INTO joanna_shop VALUES(13, "shoes", "M", 2, 20);
INSERT INTO joanna_shop VALUES(14, "shoes", "L", 2, 20);
INSERT INTO joanna_shop VALUES(15, "shoes", "XL", 2, 20);


--Display the database ordered by price

SELECT * FROM joanna_shop ORDER BY price;

--What is the maximum number of a single item in the shop

SELECT MAX(quantity) FROM joanna_shop

