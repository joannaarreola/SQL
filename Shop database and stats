--Create a store database

CREATE TABLE joanna_shop (id INTEGER PRIMARY KEY, item TEXT, size TEXT, quantity INTEGER, price INTEGER);

INSERT INTO joanna_shop VALUES(1, "tshirt", "S", 3, 5);
INSERT INTO joanna_shop VALUES(2, "tshirt", "M", 5, 5);
INSERT INTO joanna_shop VALUES(3, "tshirt", "L", 2, 5);
